{
    "manifest_version": 2,

    "name": "Eyes",
    "short_name": "Eyes",
    "description": "Mouse tracking Eyes",
    "version": "0.2",
    "icons": {
        "16": "i/icon16.png",
        "48": "i/icon48.png",
        "128": "i/icon128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["bg.js"]
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["cs.js"]
        }
    ],

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": {
            "19": "i/icon19.png",
            "38": "i/icon38.png"
        }
    }
}